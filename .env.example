# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rag_db
DB_USER=postgres
DB_PASSWORD=postgres

# Application Configuration
DEBUG=False
BACKEND_PORT=8000
FRONTEND_PORT=5173
# Note: If port 8000 is already in use, change BACKEND_PORT to another available port (e.g., 3000, 3001, 8080)

# API Configuration
API_TITLE=RAG Fact-Check API
API_VERSION=0.1.0

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# Vector Database (pgvector)
VECTOR_DIMENSION=1536

# Embedding Configuration
